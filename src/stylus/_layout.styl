header
	border-bottom-width	5px
	border-bottom-style	solid
	padding-top 10px
	padding-bottom 10px
	position	fixed
	z-index 9999
	top	0
	width 100%
	
	> .container
		padding-bottom 0
	
	#logo
		display inline-block
		
		a
			text-decoration none

		span
			display block
			
		.company		
			
			font-style italic

			@media only screen and (max-width : phone)
				font-size 0.8em
			
		.name
			top -10px
			position relative
			font-size 0.5em
			
			@media only screen and (max-width : phone)
				top -5px
				font-size 0.4em
	
	#nav
		margin-top 15px
		
		@media only screen and (max-width : phone)
			cursor pointer
			background-image url('../images/menu.png')
			background-repeat no-repeat
			background-position right top
			right 0
			margin-top 10px
			overflow visible
			min-width 40px
			min-height 29px
			
		#navContainer
			@media only screen and (max-width : phone)
				position absolute
				left 0
				right 0
				top 67px
				margin 0
				padding 0
			
				&.hidden
					display none

			a
				display inline-block
				margin-left 10px
				font-size 1.2em
				text-decoration none
				
				@media only screen and (max-width : phone)
					margin-left 0
					text-align center
					display block
					padding 10px 0
				
					&:nth-child(4) 
						border-bottom-width 5px
						border-bottom-style solid
	
section
	min-height 95%
	width 	100%
	border-bottom-width	1px
	border-bottom-style	solid
	background-image url('../images/arrow.png')
	background-size 75px auto
	background-position center 98%
	background-repeat no-repeat
	
	@media only screen and (max-width : phone)
		background-position right 98%
		
	@media only screen and (max-width : tablet)
		background-position right 98%
	// display	table
	
	> .container
		// vertical-align middle
		height 100%
		// display table-cell
			
	h2
		text-align center
		font-size 3em
		
		
#presentation
	margin-top 	80px
	@media only screen and (max-width : phone)
		margin-top 	65px
		
		img
			margin-bottom 20px

#realisations
	
	#gallery
		.col4
			max-height 100px
			margin-bottom 10px
			cursor pointer
			
			@media only screen and (max-width : phone)
				col( 4 )
				max-height 80px
				margin-bottom 10px
					
#contact
	position 	relative
	
	address
		margin-bottom 15px
		
	#map
		position absolute
		width 100%
		height 100%
		z-index 1
		background-repeat no-repeat
		background-size cover
		background-position center center
		
	.container
		z-index 2
		
		.inner
			  padding 20px

#devis
	background-image none
	
	p 
		text-align center
		
	label span
		margin-left 5px
		margin-right 10px
		
	textarea[name="comment"]
		margin-top 70px
		margin-bottom 50px
		
		@media only screen and (max-width : phone)
			margin-top auto
			margin-bottom 10px
	
footer
	padding-bottom 20px
	ul.container
		padding 0
		li
			padding 40px 0
			text-align center
		
		a
			font-size 1.3em
			text-decoration none
			
	p 
		text-align center
		font-size 0.8em
		margin 0
		
#modal
	position fixed
	width 100%
	height 100%
	top 0
	z-index 9999
	display none
	background url('../images/modal.png')
	
	.modal-inner
		position
		text-align center
		display table-cell
		vertical-align middle
		
		.container
			display inline-block
			position relative
			width auto
			max-width 100%
			max-height 100%
			
			> a
				position absolute
				right 10px
				top 0
				padding 5px 10px
				background #fff
				cursor pointer
				
			img
				max-width 100%
				max-height 100%

.modal-visible
	#modal
		display table
		
		.modalInner
			padding 40px
			text-align left
