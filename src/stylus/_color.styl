light-blue = #009fe3
dark-blue = #072436
light-grey = #dcdcdc
dark-grey = #999999
light-yellow = #fffc01
dark-yellow = #c9c702
light-red = #ED6F82
dark-red = #F11B3A
white = #ffffff
black = #000000

*
	color dark-blue

a
	color light-blue
	
	&:hover
		color saturation(light-grey, 20%)

.red
	color: dark-red

input[type="text"], input[type="tel"], input[type="email"], input[type="password"], textarea
	background-color white
	border-color light-grey
	color dark-blue !important
	
input.error, textarea.error
	border-color dark-red 


header
	background-color	white
	border-bottom-color dark-yellow
	
	@media only screen and (max-width : phone)
		.container
			overflow visible
		
	.company
		color light-blue
	
	.name
		color black
		
	#nav
		a
			@media only screen and (max-width : phone)
				background-color white

				&:nth-child(4) 
					border-bottom-color light-blue
	
section
	border-bottom-color dark-blue
	
	*
		color white

#presentation
	background-color	dark-blue
	
#realisations
	background-color	dark-yellow
	
#contact
	background-color	white
	
	address 
		color dark-blue
		
		a
			color light-blue 
	
	p, h2
		color dark-blue
		
	.inner
		background-color	white
	
#devis
	background-color	dark-grey		
	
footer
	background-color	dark-blue
	
	p 
		color white
		
.bgblue
	background-color dark-blue
	color white
	
.bgred
	background-color dark-red
	color white
	